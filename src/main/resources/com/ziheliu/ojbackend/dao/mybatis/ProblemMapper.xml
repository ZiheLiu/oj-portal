<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ziheliu.ojbackend.dao.mybatis.ProblemMapper">

    <resultMap id="problem" type="Problem">
        <id property="id" column="id"/>
        <result property="desc" column="desc"/>
    </resultMap>

    <insert id="insertProblem" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO problem (`desc`) VALUES (#{desc})
    </insert>

    <select id="selectProblemById" resultMap="problem">
        SELECT * FROM problem WHERE id = #{problemId}
    </select>

    <select id="selectProblems" resultMap="problem">
        SELECT * FROM problem
    </select>

</mapper>